@model  IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

<button>@Html.ActionLink("New Movie", "New", "Movies")</button>

@if (Model.Count() < 1)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genre</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@Html.ActionLink(m.Name, "Details", new { id = m.Id })</td>
                    <td>@m.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
